<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books</title>
</head>
<body>
    <div>
        <h1>Books</h1>
        <form action="/book/create" method="post"> <!-- Specify the action URL for form submission -->
            <label for="title">Title:</label>
            <input type="text" name="title" id="title" required>
            <br>
            <label for="author_id">Author ID:</label>
            <input type="text" name="author_id" id="author_id" required>
            <br>
            <label for="published_date">Published Date:</label>
            <input type="date" name="published_date" id="published_date" required> <!-- Use type="date" for date input -->
            <br>
            <input type="submit" value="Create">
        </form>

        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author ID</th>
                    <th>Published Date</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(book => { %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.author_id %></td>
                    <td><%= book.published_date %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
